<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Happiness" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_blue</item>
        <item name="colorPrimaryVariant">@color/light_gray_rose</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/light_gray_rose</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/oktaneue_medium</item>

        <item name="android:textColorHint">@color/white_14</item>

    </style>

    <style name="cardBackground">
        <item name="android:background">@drawable/card_background_light</item>
    </style>
</resources>
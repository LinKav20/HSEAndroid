<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Happiness" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/gray_blue</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">@color/light_gray_rose</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/oktaneue</item>
        <item name="android:lineSpacingExtra">7dp</item>

        <item name="android:background">@color/black_gray</item>

    </style>

    <style name="cardBackground">
        <item name="android:background">@drawable/card_background_dark</item>
    </style>
</resources>
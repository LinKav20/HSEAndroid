<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FragmentCardActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBack"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:alpha="0"
        app:cardCornerRadius="15dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/cardBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewMemoryBack"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="@string/text_back_card"
                android:textAlignment="center"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewFront"
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        app:cardCornerRadius="15dp"
        app:cardElevation="11dp"
        app:cardUseCompatPadding="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            style="@style/cardBackground"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewMemoryFront"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:fontFamily="@font/oktaneue_bolditalic"
                android:textSize="20dp"
                android:text="@string/text_front_card"
                android:textAlignment="center" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>